<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:strokeColor="#D9D9D9"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Room Title -->
                <TextView
                    android:id="@+id/tvRoomName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Phòng tiêu chuẩn giường đôi"
                    android:textColor="#469EF0"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Room Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <!-- For 2 Adults -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_people"
                            app:tint="#000000" />

                        <TextView
                            android:id="@+id/tvRoomType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Giá cho 2 người lớn"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Bed Type -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_bed"
                            app:tint="#000000" />

                        <TextView
                            android:id="@+id/tvRoomBedType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="1 giường đôi lớn"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Room Size -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_square"
                            app:tint="#000000" />

                        <TextView
                            android:id="@+id/tvRoomSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Cỡ phòng: 22 m²"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Bathroom -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_bath"
                            app:tint="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Phòng tắm riêng trong phòng"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Cancellation Policy -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_alert_circle"
                            app:tint="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Phí hủy: Toàn bộ tiền phòng"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Payment Options -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_check"
                            app:tint="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Không cần thanh toán nước - Thanh toán tại chỗ nghỉ"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_check"
                            app:tint="#34A853" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Bao gồm chỗ đậu xe + internet tốc độ cao"
                            android:textColor="#34A853"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Availability -->
                <TextView
                    android:id="@+id/tvRoomAvailability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Chỉ còn 2 phòng trên Hotel Booking"
                    android:textColor="#EA4335"
                    android:textSize="14sp" />

                <!-- Discount Tags -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvRoomDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/green_tag_bg"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="Tiết kiệm 62%"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvRoomLimitedTimeOffer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/green_tag_bg"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="Ưu đãi trong thời gian có hạn"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Price -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá cho 1 đêm"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvOriginalPriceRoom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="1.999.999 đ"
                            android:textColor="#EA4335"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tvDiscountedPriceRoom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.888.888 đ"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã bao gồm thuế và phí"
                        android:textColor="#C2BDBD"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Room Image -->
            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:id="@+id/ivRoomImage"
                android:layout_marginTop="10dp"
                android:background="@drawable/image_radius"
                android:clipToOutline="true"/>
        </LinearLayout>

        <!-- Choose Button -->
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_button_outline"
            android:text="Chọn"
            android:textColor="#469EF0"
            android:textStyle="bold"
            android:padding="12dp"
            android:id="@+id/btn_chooseRoom"
            app:backgroundTint="@null"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>